<% if logged_in? %>
<h1>タスク一覧</h1>
<p>ログイン完了ユーザ: <%= current_user.name %></p>
<ul>
    <% @tasks.each do |task| %>
    <li>
        <%= link_to task.id, task_path(task) %>
        <%= task.status %>
        &gt; 
        <%= task.content %>
    </li>
    <% end %>
</ul>
<%= link_to '新規タスクの投稿', new_task_path %>
<% else %>
<h1>タスク一覧</h1>
<% end %>